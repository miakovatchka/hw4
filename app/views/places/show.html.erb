<div class="container">
<h1><%= @place["name"] %></h1>

<p>
  <a <button type="button" class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<div class="row">
<% for entry in @entries %>
<div class="col-xs-12 col-sm-6 col-md-3 mb-4"> 
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
  <img src="<%= entry["image"] %>" class="img-fluid" alt="Entry Image">
  </div>
<% end %>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>
</div>