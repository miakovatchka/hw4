<div class="container pb-4">
<h1 class="pt-3 pb-2"><%= @place["name"] %></h1>

<p>
  <a <button type="button" class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<div class="row">
<% for entry in @entries %>
<div class="col-md-4">
  <h4><%= entry["title"] %></h4>
  <p><%= entry["occurred_on"] %></p>
   <div style="width: 200px; height: 200px; overflow: hidden;">
  <p><% if entry.uploaded_image.attached? %>
  <img src="<%= url_for(entry.uploaded_image) %>" alt="Entry Image" class="img-fluid" style="width: 100%; height: 200px; object-fit: cover;">
  <% end %>
  </div>
  <div style="width: 200px;">
  <p><%= entry["description"] %></p>
  </div>
  </div>
<% end %>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>
</div>