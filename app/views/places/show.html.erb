<div class="container pb-4">
<h1 class="pt-3 pb-2"><%= @place["name"] %></h1>

<p>
  <a <button type="button" class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<div class="row">
<% for entry in @entries %>
<div class="col-xs-12 col-sm-6 col-md-4 mb-4"> 
 <div class="p-2">
  <h2 class="fw-bold"><%= entry["title"] %></h2>
  <h3 class="fs-6"><%= entry["occurred_on"] %></h3>
  <p><%= entry["description"] %></p>
  <img src="<%= entry["image"] %>" class="img-fluid" alt="Entry Image">
  </div>
  </div>
<% end %>
</div>

<p>
  <a href="/places">Back to All Places</a>
</p>
</div>